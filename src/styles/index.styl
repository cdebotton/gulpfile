@import 'nib'

*,
*::before,
*::after
  box-sizing border-box

body,
html
  margin 0
  padding 2em
  width 100%
  height 100%

body
  background-color #fefefe
  background linear-gradient(45deg, #fff, #fcfcfc)

h1,
h2,
h3,
h4,
h5,
h6
  font-family 'Lato', sans-serif
  font-weight 300
  color #1f1f1f

a
  text-decoration none
  color #8f8f8f
  &.active
    color #000
  &+a
    margin-left 1em
